kind: Deployment
apiVersion: apps/v1
metadata:
    name: newapp
spec:
    replicas: 2
    selector:
        matchLabels:
            app: newapp
    template:
        metadata:
            name: newapp
            labels: {app: newapp, env: prod0}
        spec:
            containers: [{name: newapp, image: 'mynewcont.azurecr.io/newapp:v1'}]
            imagePullSecrets: [{name: secret}]
app: newapp
